{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "planning/day-capacity",
    "title": "Day Capacity",
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "availability": {
        "type": "number",
        "description": "Decimal number from 0 to 1 representing the fraction of the day when the person is available",
        "minimum": 0,
        "maximum": 1
      }
    },
    "required": [
      "id",
      "name",
      "availability"
    ],
    "additionalProperties": false
  }
  